<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="default_text">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/default_text</item>
    </style>


    <style name="verify_text">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/verify_text</item>

    </style>

    <style name="vague_text">
        <item name="android:textSize">@dimen/text_size17</item>
        <item name="android:textColor">@color/vague_text</item>
    </style>

    <style name="name_stores">
        <item name="android:textSize">@dimen/name_stores</item>
        <item name="android:textColor">@color/name_stores</item>
    </style>

    <style name="num_q">
        <item name="android:textSize">@dimen/num_q</item>
        <item name="android:textColor">@color/num_q</item>
    </style>

    <style name="text_size24">
        <item name="android:textSize">@dimen/text_size24</item>
        <item name="android:textColor">@color/cancel_button</item>
    </style>

    <style name="text_size20">
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="text_size18">
        <item name="android:textSize">@dimen/text_size18</item>
        <item name="android:textColor">@color/default_text</item>
    </style>

    <style name="title_main">
        <item name="android:label">@string/app_name</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cancel_button">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/cancel_button</item>
    </style>

    <style name="ok_button">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/ok_button</item>
    </style>

    <style name="edit_button">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/edit_button</item>
    </style>

    <style name="save_button">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/save_button</item>
    </style>

    <style name="add_list_q">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/addnumber_button</item>
    </style>

    <style name="logout_button">
        <item name="android:textSize">@dimen/text_size22</item>
        <item name="android:textColor">@color/text_button</item>
        <item name="android:backgroundTint">@color/logout_button</item>
    </style>

    <style name="topic_title">
        <item name="android:textSize">@dimen/text_size20</item>
        <item name="android:textColor">@color/topic_color</item>
    </style>

    <style name="detail_alert">
        <item name="android:textSize">@dimen/text_size15</item>
        <item name="android:textColor">@color/detail_color</item>
    </style>

    <style name="et_style_fill" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/addnumber_button</item>
    </style>

    <style name="spinner_style_fill">
        <item name="colorControlActivated">@color/addnumber_button</item>
    </style>

    <style name="switch_style" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/save_button</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="et_style_noti" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlActivated">@color/save_button</item>
        <item name="android:textSize">@dimen/text_size22</item>
    </style>

    <style name="spinner_style_noti">
        <item name="colorControlActivated">@color/save_button</item>
    </style>

    <style name="MyActionBar">
        <item name="android:height">56dp</item>
        <item name="height">56dp</item>
    </style>


    <!--use item name="drawerArrowStyle" if you are using dark primaryColor in your app, else remove it-->
    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/black</item>
    </style>


</resources>
