<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="คุณต้องออกจากระบบหรือไม่?"
        android:textAppearance="@style/verify_text"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_main_dialog_Logout"
            style="@style/cancel_button"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:onClick="ClickButtonLogout"
            android:text="ใช่" />


        <Button
            android:id="@+id/btn_main_dialog_cancel"
            style="@style/ok_button"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:onClick="ClickButtonCancel"
            android:text="ยกเลิก" />


    </LinearLayout>

</LinearLayout>