<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jnstar.urqproject.Notification"
    tools:showIn="@layout/activity_notification"
    android:layout_marginTop="30dp">

<TextView
    android:id="@+id/tot"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="..."/>

    <Switch
        android:id="@+id/sw_alarm"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="เสียงการแจ้งเตือน"
        android:textAppearance="@style/default_text"
        android:theme="@style/switch_style"
        />

    <Switch
        android:id="@+id/sw_notification"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:text="การแจ้งเตือน"
        android:textAppearance="@style/default_text"
        android:theme="@style/switch_style"
        />

    <TextView
        android:id="@+id/tv_notification_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="25dp"
        android:text="รูปแบบการแจ้งเตือน"
        android:textSize="@dimen/text_size22"
        />


    <Spinner
        android:id="@+id/sp_setting"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:theme="@style/spinner_style_noti" />

    <Spinner
        android:id="@+id/sp_setting_3"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="10dp"
        android:theme="@style/spinner_style_noti" />


    <TextView
        android:id="@+id/tv_detail_1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="25dp"
        android:text="จำนวนคิวที่ต้องการให้แจ้งก่อนล่วงหน้า"
        android:textSize="@dimen/text_size22" />

        <EditText
            android:id="@+id/ed_add_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:hint="ระบุจำนวนคิว"
            android:inputType="textPersonName|number"
            android:textSize="@dimen/text_size22"
            android:theme="@style/et_style_noti"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_detail_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="25dp"
            android:text="เลือกเวลาที่ต้องการ"
            android:textSize="@dimen/text_size22"/>



        <Spinner
            android:id="@+id/sp_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:theme="@style/spinner_style_noti"
            />


        <Button
            android:id="@+id/btn_notification_save"
            style="@style/save_button"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="บันทึกการเปลี่ยนแปลง" />



</LinearLayout>
